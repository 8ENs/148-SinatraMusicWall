<% @tracks.each do |track| %>
  <div class="track">
    <h3><a href="/tracks/<%= track.id %>"><%= track.song %></a> 
      <!-- only display if url field exists -->
      <% unless track.url.to_s.empty? %>
        <a href="<%= track.url %>" target="_blank"><span style="font-size: 12px">video</span></a>
      <% end %>
      </br>
      <span style="font-size: 12px">
        <%= track.likes %> points by 
        <a href="/users/<%= track.user_id %>"><%= track.user.name %></a>
      </span>
    </h3>
  </div>
<% end %>

