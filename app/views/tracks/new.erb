<% if @track.errors.any? %>
  <div>
    <strong>Some issues with your track, please fix them:</strong>
    <ul>
      <% @track.errors.full_messages.each do |track| %>
        <li><%= track %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="post" action="/tracks">
  <div>
    <label>Song Title:</label>
    <input type="text" name="song" value="<%= @track.song%>">
  </div>
  <div>
    <label>Album:</label>
    <input type="text" name="album" value="<%= @track.album %>">
  </div>
  <div>
    <label>Artist:</label>
    <input type="text" name="artist" value="<%= @track.artist %>">
  </div>
  <div>
    <label>Video (url):</label>
    <input type="text" name="url" value="<%= @track.url %>">
    <span>(optional)</span>
  </div>
  <div>
    <label>Your name:</label>
    <input type="text" name="fan" value="<%= @track.fan %>">
  </div>
  <div>
    <input type="submit" value="Submit">
  </div>
</form>